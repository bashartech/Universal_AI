{
  "name": "universal-chatbot",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --open /demo.html",
    "dev:admin": "vite --open /admin.html",
    "dev:widget": "vite --config vite.config.widget.ts",
    "build": "tsc -b && vite build && vite build --config vite.config.widget.ts && vite build --config vite.config.admin.ts",
    "build:widget": "tsc -b && vite build --config vite.config.widget.ts",
    "build:admin": "tsc -b && vite build --config vite.config.admin.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "preview:widget": "vite preview --outDir dist/widget",
    "preview:admin": "vite preview --outDir dist/admin"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "date-fns": "^4.1.0",
    "firebase": "^12.9.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0",
    "uuid": "^13.0.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1"
  }
}
